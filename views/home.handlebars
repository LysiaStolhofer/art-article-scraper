<!--Homepage-->
<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1>N e w s - S c r a p e r</h1>
            <h3>A r t - P a r a s i t e s</h3>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                    <h5>{{this.category}}</h5>
                    <h4>{{this.title}}</h4>
                    
                </div>
                <div class="panel-body">
                    <div class="rosa">
                    <img src="{{this.image}}" >
                    <br><br><br><br><br>
                    <p data-shadow="artist">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{this.artist}}</p>
                    <a href="{{this.link}}" target="_blank">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{this.link}}</a>
                    </div>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
            <h4>Looks like we don't have any new articles.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>